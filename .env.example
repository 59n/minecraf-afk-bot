# MinecraftAFK WebSocket Bot Configuration
# Copy this file to .env and fill in your actual values

# Discord Webhook Configuration
# Get this from Discord: Server Settings > Integrations > Webhooks > Create Webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# MinecraftAFK Session Configuration
# Get this from your browser's developer tools after logging into minecraftafk.com
# 1. Open minecraftafk.com in your browser
# 2. Open Developer Tools (F12)
# 3. Go to Application/Storage > Cookies > minecraftafk.com
# 4. Copy the 'token' cookie value
MINECRAFTAFK_TOKEN=token

# WebSocket Configuration
WEBSOCKET_URL=wss://minecraftafk.com/ws

# Connection Settings
MAX_RECONNECT_ATTEMPTS=10
RECONNECT_INTERVAL=1000
MAX_RECONNECT_INTERVAL=30000
STABLE_CONNECTION_THRESHOLD=300000
DISCONNECT_COOLDOWN=120000

# Notification Settings (in milliseconds)
DISCORD_PING_INTERVAL=7200000
STATUS_SUMMARY_INTERVAL=7200000

# Logging Configuration
LOG_DIRECTORY=./chat_logs
NODE_ENV=production
DEBUG_MODE=false